<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.myapp.courier">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Courier">
        <activity android:name=".admin.AssignDriverActivity"></activity>
        <activity android:name=".customer.ProfileActivity" />
        <activity android:name=".admin.AdminMainActivity" />
        <activity android:name=".driver.OrderStatusActivity" />
        <activity android:name=".driver.DriverAcceptedOrdersActivity" />
        <activity android:name=".driver.ViewOrderActivity" />
        <activity android:name=".driver.DriverHomeActivity" />
        <activity android:name=".customer.OrderDetailsActivity" />
        <activity android:name=".customer.SendOrderActivity" />
        <activity android:name=".customer.CustomerHomeActivity" />
        <activity android:name=".login.LoginActivity" />
        <activity android:name=".login.RegisterActivity" />
        <activity android:name=".login.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>